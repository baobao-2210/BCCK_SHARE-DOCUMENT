<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header trắng: Logo + Tiêu đề + Notification -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/ute1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tài liệu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/logo"
                    app:layout_constraintEnd_toStartOf="@id/iconNotification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/iconNotification"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Notification"
                    android:src="@android:drawable/ic_popup_reminder"
                    android:padding="6dp"
                    app:tint="#5B5FC7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- Search + nút thêm -->
        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            android:backgroundTint="#F6F7FB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:iconifiedByDefault="false"
                    app:queryHint="Tìm kiếm tài liệu..."
                    app:searchIcon="@android:drawable/ic_menu_search"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/addIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@android:drawable/ic_input_add"
                    android:padding="7dp"
                    android:contentDescription="Add"
                    app:tint="#5B5FC7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <!-- 4 storage cards (2 cột) - KHÔNG CÒN thanh tím -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDropbox"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardGDrive"
            app:layout_constraintTop_toBottomOf="@id/searchCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/dropboxIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_dropbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/dropboxTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dropbox"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111111"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/dropboxIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/dropboxIcon"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/dropboxInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2 items • 1.2 GB"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/dropboxIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropboxTitle"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ProgressBar
                    android:id="@+id/dropboxProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="14dp"
                    android:progress="12"
                    android:progressTint="#0061FF"
                    android:backgroundTint="#E8ECF6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropboxIcon"/>

                <TextView
                    android:id="@+id/dropboxPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0061FF"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropboxProgress"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardGDrive"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/cardDropbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/gdriveIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gdrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/gdriveEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Google Drive"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111111"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/gdriveIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/gdriveIcon"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/gdriveInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4 items • 13.5 GB"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/gdriveIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdriveEmail"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ProgressBar
                    android:id="@+id/gdriveProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="14dp"
                    android:progress="52"
                    android:progressTint="#4285F4"
                    android:backgroundTint="#E8ECF6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdriveIcon"/>

                <TextView
                    android:id="@+id/gdrivePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdriveProgress"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardOneDrive1"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardOneDrive2"
            app:layout_constraintTop_toBottomOf="@id/cardDropbox">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/onedrive1Icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_onedrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/onedrive1Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OneDrive"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111111"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/onedrive1Icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/onedrive1Icon"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/onedrive1Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5 items • 184.3 GB"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/onedrive1Icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive1Title"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ProgressBar
                    android:id="@+id/onedrive1Progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="14dp"
                    android:progress="31"
                    android:progressTint="#0078D4"
                    android:backgroundTint="#E8ECF6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive1Icon"/>

                <TextView
                    android:id="@+id/onedrive1Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0078D4"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive1Progress"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardOneDrive2"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/cardOneDrive1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardGDrive">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/onedrive2Icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_onedrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/onedrive2Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OneDrive"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111111"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/onedrive2Icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/onedrive2Icon"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/onedrive2Info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7 items • 1311 GB"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/onedrive2Icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive2Title"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ProgressBar
                    android:id="@+id/onedrive2Progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="14dp"
                    android:progress="62"
                    android:progressTint="#0078D4"
                    android:backgroundTint="#E8ECF6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive2Icon"/>

                <TextView
                    android:id="@+id/onedrive2Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0078D4"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive2Progress"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Barrier dưới 2 card OneDrive để đặt nút filter -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStorage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cardOneDrive1,cardOneDrive2" />


        <!-- Filter buttons -->
        <LinearLayout
            android:id="@+id/filterRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierStorage">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Tất Cả"
                android:textColor="#FFFFFF"
                android:backgroundTint="#5B5FC7"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPopular"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Phổ Biến"
                android:textColor="#111111"
                android:backgroundTint="#EEF1F7"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnNewest"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Mới Nhất"
                android:textColor="#111111"
                android:backgroundTint="#EEF1F7" />
        </LinearLayout>


        <!-- List tài liệu -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeDocuments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterRow"
            tools:listitem="@layout/item_document" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
