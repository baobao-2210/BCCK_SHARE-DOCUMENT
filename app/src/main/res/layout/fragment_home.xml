<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="96dp"
    android:background="#F6F7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TOP BAR -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topBarCard"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:backgroundTint="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ute1"
                    android:contentDescription="Logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tvHomeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tài liệu"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111827"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/logo"
                    app:layout_constraintEnd_toStartOf="@id/iconNotification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iconNotification"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@android:drawable/ic_popup_reminder"
                    android:contentDescription="Notification"
                    android:padding="8dp"
                    app:tint="#5B5FC7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SEARCH -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchCard"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/topBarCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#9CA3AF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:queryHint="Tìm kiếm tài liệu..."
                    android:iconifiedByDefault="false"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toEndOf="@id/ivSearch"
                    app:layout_constraintEnd_toStartOf="@id/addIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@android:drawable/ic_input_add"
                    android:padding="8dp"
                    android:contentDescription="Add"
                    app:tint="#5B5FC7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SECTION: STORAGE (có nền màu nhẹ để chia cắt) -->
        <TextView
            android:id="@+id/tvStorageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Kho lưu trữ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            app:layout_constraintTop_toBottomOf="@id/searchCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storageSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#EEF2FF"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvStorageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- CARD: Dropbox -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDropbox"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardGDrive"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/dropboxIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_dropbox"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/dropboxTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dropbox"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toEndOf="@id/dropboxIcon"
                            app:layout_constraintTop_toTopOf="@id/dropboxIcon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/dropboxInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="2 items • 1.2 GB"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/dropboxIcon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ProgressBar
                            android:id="@+id/dropboxProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:progress="12"
                            android:progressTint="#2563EB"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/dropboxInfo"/>

                        <TextView
                            android:id="@+id/dropboxPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12%"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#2563EB"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD: Google Drive -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGDrive"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintStart_toEndOf="@id/cardDropbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/gdriveIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_gdrive"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/gdriveTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Google Drive"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toEndOf="@id/gdriveIcon"
                            app:layout_constraintTop_toTopOf="@id/gdriveIcon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/gdriveInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="4 items • 13.5 GB"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/gdriveIcon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ProgressBar
                            android:id="@+id/gdriveProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:progress="52"
                            android:progressTint="#16A34A"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/gdriveInfo"/>

                        <TextView
                            android:id="@+id/gdrivePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52%"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#16A34A"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD: OneDrive 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOneDrive1"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardOneDrive2"
                    app:layout_constraintTop_toBottomOf="@id/cardDropbox"
                    android:layout_marginEnd="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/od1Icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_onedrive"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/od1Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="OneDrive"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toEndOf="@id/od1Icon"
                            app:layout_constraintTop_toTopOf="@id/od1Icon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/od1Info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="5 items • 184 GB"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/od1Icon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ProgressBar
                            android:id="@+id/od1Progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:progress="31"
                            android:progressTint="#0EA5E9"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/od1Info"/>

                        <TextView
                            android:id="@+id/od1Percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31%"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#0EA5E9"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD: OneDrive 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOneDrive2"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintStart_toEndOf="@id/cardOneDrive1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardGDrive"
                    android:layout_marginStart="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/od2Icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_onedrive"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/od2Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="OneDrive"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toEndOf="@id/od2Icon"
                            app:layout_constraintTop_toTopOf="@id/od2Icon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/od2Info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="7 items • 1311 GB"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/od2Icon"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ProgressBar
                            android:id="@+id/od2Progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:progress="62"
                            android:progressTint="#F59E0B"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/od2Info"/>

                        <TextView
                            android:id="@+id/od2Percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="62%"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#F59E0B"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FILTER -->
        <TextView
            android:id="@+id/tvFilterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Bộ lọc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            app:layout_constraintTop_toBottomOf="@id/storageSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/filterRow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/tvFilterTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tất cả"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:backgroundTint="#2563EB"
                app:cornerRadius="16dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPopular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Phổ biến"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#111827"
                android:backgroundTint="#E5E7EB"
                app:cornerRadius="16dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Mới nhất"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:backgroundTint="#0891B2"
                app:cornerRadius="16dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" />
        </LinearLayout>

        <!-- LIST -->
        <TextView
            android:id="@+id/tvDocTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Tài liệu"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            app:layout_constraintTop_toBottomOf="@id/filterRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeDocuments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDocTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_document"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
