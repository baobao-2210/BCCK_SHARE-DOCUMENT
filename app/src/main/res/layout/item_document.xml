<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Accent strip (nhìn tách phần đẹp hơn) -->
        <View
            android:id="@+id/accentStrip"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="#5B5FC7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/authorAvatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="#EEF2FF"
            app:cardCornerRadius="21dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_dropbox"
                app:tint="#5B5FC7" />
        </androidx.cardview.widget.CardView>

        <!-- Author Name -->
        <TextView
            android:id="@+id/tvAuthorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:text="TS.Nguyễn Tấn Thuận"
            android:textColor="#4F46E5"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/authorAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintTop_toTopOf="@id/authorAvatar"
            app:layout_constraintBottom_toBottomOf="@id/authorAvatar" />

        <!-- More Button -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_more"
            app:tint="#111827"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="More" />

        <!-- Document Title -->
        <TextView
            android:id="@+id/tvDocTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:text="Lập trình hướng đối tượng chương I"
            android:textColor="#111827"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toStartOf="@id/docTypeBadge"
            app:layout_constraintTop_toBottomOf="@id/authorAvatar" />

        <!-- Badge PDF -->
        <TextView
            android:id="@+id/docTypeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FFF1F2"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="PDF"
            android:textColor="#E11D48"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDocTitle" />

        <!-- Tags row (icon có nền nhẹ) -->
        <LinearLayout
            android:id="@+id/tagRow1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDocTitle">

            <androidx.cardview.widget.CardView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:backgroundTint="#ECFDF5"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="#16A34A" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSubject1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lập trình hướng đối tượng"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tagRow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tagRow1">

            <androidx.cardview.widget.CardView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:backgroundTint="#FFF7ED"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#F97316" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="T.S Nguyễn Quốc Hùng"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tagRow3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tagRow2">

            <androidx.cardview.widget.CardView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:backgroundTint="#EFF6FF"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#2563EB" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvMajor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Công nghệ thông tin"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EEF2F7"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tagRow3"/>

        <!-- Stats -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/accentStrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/stat_sys_download"
                app:tint="#9CA3AF"/>

            <TextView
                android:id="@+id/tvDownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="#9CA3AF"/>

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star"
                app:tint="#F59E0B"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0.0"
                android:textColor="#F59E0B"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
