<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <ImageView
        android:id="@+id/dropboxIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_dropbox"
        android:contentDescription="Dropbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dropboxTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dropbox"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#111827"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/dropboxIcon"
        app:layout_constraintTop_toTopOf="@id/dropboxIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dropboxInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 items â€¢ 1.2 GB"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/dropboxIcon"
        app:layout_constraintTop_toBottomOf="@id/dropboxTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/dropboxProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        android:progress="12"
        android:progressTint="#0061FF"
        android:indeterminate="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dropboxInfo"/>

    <TextView
        android:id="@+id/dropboxPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12%"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#0061FF"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dropboxProgress"/>
</androidx.constraintlayout.widget.ConstraintLayout>
